<% layout("/layouts/boilerplate") %>
 <div class="container">
<body>
    <h2>All Listings</h2>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
      </form> -->


      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4 ">
   <% for(let listing of allListings){ %>
    <a class="listing-link"  href="/listings/<%= listing._id %>">
        <div class="card col" >
          <img src="<%= listing.image.url %>"  class="card-img-top" alt="..." style="height: 25rem">
          <div class="card-img-overlay"></div>
          <div class="card-body">
        
            <p class="card-text" style="margin-left: 35px;">
             <b> <%= listing.title %></b>
              <br><br>
              &#8377;<%= listing.price.toLocaleString("en-In") %>/item
               <br>
               <%= listing.rating %> &#11088;
            </p>
              <br>
             
          </div>
        </div>
      </a>
      <% } %>

      </div>


      





      
</body>

</div>


