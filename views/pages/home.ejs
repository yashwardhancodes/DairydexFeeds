  // Initialize and add the map
  function initMap() {
    // Location coordinates (latitude and longitude)
    var location = { lat: 19.869483634594385, lng: 74.5988811557491 }; // New York City coordinates

    // Create a map centered at the specified location
    var map = new google.maps.Map(document.getElementById("map"), {
      zoom: 12, // Zoom level
      center: location // Center the map on the specified location
    });

    // Add a marker at the specified location
    var marker = new google.maps.Marker({
      position: location,
      map: map,
      title: "Dairy Dex Cattle Feeds" // Tooltip text when hovering over the marker
    });
  }


  function openDirections() {
    // Coordinates of your location
    var lat = 19.869483634594385; // Replace with your latitude
    var lng = 74.5988811557491; // Replace with your longitude

    // URL to open Google Maps with directions
    var mapsUrl = `https://www.google.com/maps/dir/?api=1&destination=${lat},${lng}`;

    // Open the URL in a new tab
    window.open(mapsUrl, '_blank');
  }
</script>
